apiVersion: v1
kind: PersistentVolume
metadata:
    name: nfs-pv
    namespace: {{ NAMESPACE }}
spec:
    capacity:
      storage: 1Gi
    accessModes:
      -  ReadWriteMany
    storageClassName: standard
    persistentVolumeReclaimPolicy: Retain
    mountOptions:
        - hard
    nfs:
        path: /
        server: localhost