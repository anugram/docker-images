apiVersion: v1
kind: PersistentVolume
metadata:
    name: nfs-pv
    namespace: {{ NAMESPACE }}
spec:
    capacity:
      storage: 1Gi
    accessModes:
      -  ReadWriteMany
    storageClassName: nfs
    persistentVolumeReclaimPolicy: Retain
    mountOptions:
        - hard
        - nfsvers=4
    nfs:
        path: /data/cte
        server: {{ NFS_IP }}
