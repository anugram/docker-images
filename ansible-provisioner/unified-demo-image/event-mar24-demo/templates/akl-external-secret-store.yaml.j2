apiVersion: external-secrets.io/v1beta1
kind: SecretStore
metadata:
  name: akeyless-secret-store
  namespace: {{ NAMESPACE }}
spec:
  provider:
    akeyless:
      # URL of your akeyless API
      akeylessGWApiURL: "https://{{ CM_IP }}/akeyless-api/v2"
      caBundle: {{ CA_BUNDLE }}
      authSecretRef:
        secretRef:
          accessID:
            name: akeyless-secret-creds
            key: accessId
          accessType:
            name: akeyless-secret-creds
            key: accessType
          accessTypeParam:
            name: akeyless-secret-creds
            key: accessTypeParam